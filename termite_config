# This file should be named "config"

[options]
# Allow bold bo characters
allow_bold = true

# Have the terminal beep on the terminal bell
audible_bell = false

# Display bold text in bright colors
bold_is_bright = true

# Set default browser for opening links. If not set, default browser used
# $BROWSER is used by default if set, with xdg-open as a fallback
#browser = xdg-open
browser=google-chrome-stable

# Auto-detected URLs can be clicked to open them in the browser
clickable_url = true

# Enable support for applications to mark text as hyperlinks
hyperlinks = true

# Specify how the terminal cursor should behave
# "system", "on" or "off"
# cursor_blink

# Specify how the cursor should look
# "block", "underline" or "ibeam"
# cursor_shape = block

# Allow terminal and shell to update terminal's title
dynamic_title = true

# Whether to hide url hints not matching input in url hints mode
# filter_unmatched_urls

font = Monospace 9

#Enable fullscreen by pushing F11
fullscreen = true

# The name of the icon to be used for the terminal process
icon_name = terminal

# Emit escape sequences for extra keys, like the modifyOtherKeys resource for xterm
# modify_other_keys

# Automatically hide the mouse pointer when typing
mouse_autohide = true

# Length of the scrollback buffer, 0 disabled the scrollback buffer
# and setting it to a negative value means "infinite scrollback"
scrollback_lines = 10000

# Specify scrollbar visibility and position (off, left, or right)
# scrollbar

# Scroll to the bottom automaticall when a key is pressed
scroll_on_keystroke = true

# Scroll to the bottom when the shell generates output
scroll_on_output = false

# Search from the top again when the bottom is reached
search_wrap = true

# Sets the window as urgent on the terminal bell
urgent_on_bell = true

# Enable size hints. Locks terminal resizing to increments of the terminal's
# cell size. Requires a window manager that respects scroll hints
#size_hints


[colors]
# If both of these are unset, cursor falls back to the foreground color,
# and cursor_foreground falls back to the background color.
#cursor = #dcdccc
#cursor_foreground = #dcdccc

